.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current__group 
        = @group.name
      .main-header__left-box__member-list
        Member : 
        - @group.users.each do |user|
          .main-header__left-box__member-list__member 
            = user.name
    .main-header__edit-btn
      = link_to edit_group_path(@group.id), class: "group-edit__btn" do
        Edit

  .messages
    = render @messages
  
  .form
    = form_for [@group, @message] do |f|
      .form__box
        = f.text_field :content, class: 'form__box__message', placeholder: 'type a message'
        = f.label :image, class: 'form__box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      .form-submit__btn
        = f.submit 'Send', class: 'form__submit__btn' 