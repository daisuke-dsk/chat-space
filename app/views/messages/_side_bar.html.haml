.side-bar
  .side-header
    .side-header__box
      .side-header__box__name
        = current_user.name
      .side-header__box__menu
        .side-header__box__menu__new-group
          = link_to "new_group_path" do
            = icon('far', 'edit', class: 'side-header__box__menu--icon')
        .side-header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            =icon('fas', 'cog', class: 'side-header__box__menu--icon')

  .groups
    = link_to "#", class: "group" do
      - current_user.groups.each do |group|
        .group__name
          test
        .group__message
          まだメッセージがありません